	<select id="listCount" resultType="int">
	    SELECT COUNT(*)
	    FROM tb_cmn_cd
	</select>
	
	<insert id="insert" >
		INSERT INTO 
			tb_cmn_cd (
					 groCd
				    ,groNm
				    ,cmnCd
				    ,cmnNm
				    ,regId
				    ,regDt
				    ,useYn
				    ,arayOrde
			)
		VALUES (
				 #{groCd}
				,#{groNm}
				,#{cmnCd}
				,#{cmnNm}
				,#{regId}
				,now()
				,#{useYn}
				,#{arayOrde}
		)
	</insert>
</mapper>